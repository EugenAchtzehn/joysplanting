---
import { Image } from 'astro:assets';
import arrowDown from '../images/arrow-down.svg';
interface Props {
  boxTitle: string;
  description: string;
  //   effectName: string;
  //   effectDuration: string;
  showArrow: boolean;
}

const { boxTitle, description, showArrow } = Astro.props;
---

<li class="flow__box" data-aos="fade-down" data-aos-duration="1500">
  <h3>{boxTitle}</h3>
  <slot />
  <!-- <img class="flow__box-icon" src={boxImageSource} alt={boxImageAlt} /> -->
  <p>{description}</p>
  {showArrow && <Image class="flow__icon-arrow" src={arrowDown} alt="箭頭icon" loading="eager" />}

  <style>
    .flow__box {
      padding: 1rem;
      font-weight: 700;
      color: #7a8085;
      text-align: center;
      background-color: #ffffff;
      margin-bottom: 1.5rem;
      position: relative;
    }
    .flow__box-icon {
      max-width: 3rem;
      max-height: 3rem;
      display: block;
      margin: 1rem auto;
    }
    .flow__icon-arrow {
      position: absolute;
      bottom: -1.5rem;
      left: 50%;
      height: 1.5rem;
      width: 1.5rem;
      /* color: #198754; */
    }
    .flow__box:last-of-type {
      margin-bottom: 0;
    }
  </style>
</li>
